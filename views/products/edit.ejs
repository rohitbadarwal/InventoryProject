<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit <%=product.name %>
    </title>
    <%- include('../partials/bootstrap'); %>
</head>

<body>
    <div class="container">
        <h1 class="display-2">Edit</h1>
        <form action="/products/<%=product._id %>?_method=PUT" method="POST" autocomplete="off">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Product Name : </label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Product Name"
                        value="<%= product.name %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="price">Price : </label>
                    <input class="form-control" type="number" name="price" id="price" placeholder="Price"
                        value="<%= product.price %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="category">Category :</label>
                    <select class="form-control" name="category" id="category">
                        <% for(let n of categories) { %>
                            <option value="<%=n%>" <%=product.category===n ? 'selected' : '' %> >
                                <%=n%>
                            </option>
                            <% } %>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Update</button>
            <button class="btn btn-danger"><a style="text-decoration: none; color:white"
                    href="/products/<%=product._id %>">Cancel</a></button>
        </form>
    </div>
</body>

</html>